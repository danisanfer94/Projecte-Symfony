{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="task-list">
  <h2>{{tasca.title}}</h2>
  <p class="subtitle">{{tasca.user.name}} {{tasca.user.surname}} | {{tasca.CreatedAt|date('d/m/Y h:m:s')}} | {{tasca.priority}} | {{tasca.hours}}h</p>
  <p class="content">{{tasca.content}}</p>


</div>

{% endblock %}
