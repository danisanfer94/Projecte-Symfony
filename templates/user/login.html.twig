{% extends 'base.html.twig' %}

{% block title %}Login Ususari{% endblock %}

{% block body %}

  <div class="container">
  <h1>Login Usuaris</h1>

    {% if error %}
      <div class="alert alert-error">
        {{ error.message}}
      </div>
    {% endif %}

    {% if app.user %}
      {{dump(app.user)}}
    {% endif %}

    <form  action="" {{path ('login')}} method="post">
        <label for="username">Email</label>
        <input type="email" id="username" name="_username" placeholder="EMAIL" value="{{ lastUsername }}">

        <label for="password">Password</label>
        <input type="password" id="password" name="_password" placeholder="PASSWORD" value="">

        <!-- <input type="hidden" name="_target_path" value="/registre" /> -->
        <div class="clearfix"></div>
        <input type="submit" value="Login">
    </form>

    </div>
{% endblock %}
